{
    "name": "locky42/telegram-logger",
    "description": "A PSR-4 compatible service for logging messages to Telegram",
    "type": "library",
    "license": "MIT",
    "keywords": ["telegram", "logger", "logging", "psr-4"],
    "authors": [
        {
            "name": "Максим Зінченко",
            "email": "zinchenko.m.42@gmail.com",
            "homepage": "https://github.com/locky42"
        }
    ],
    "homepage": "https://github.com/locky42/telegram-logger",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Locky42\\TelegramLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Locky42\\TelegramLogger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=\"Unit Tests\"",
        "test-component": "phpunit --testsuite=\"Component Tests\"",
        "test-integration": "phpunit --testsuite=\"Integration Tests\"",
        "test-http": "phpunit --testsuite=\"HTTP Tests\"",
        "test-functional": "phpunit --testsuite=\"Functional Tests\"",
        "test-coverage": "phpunit --coverage-html=coverage/html",
        "test-coverage-text": "phpunit --coverage-text"
    },
    "config": {
        "optimize-autoloader": true
    }
}
